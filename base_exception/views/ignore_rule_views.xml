<?xml version="1.0" ?>
<odoo>
    <record id="view_ignore_rule_tree" model="ir.ui.view">
        <field name="name">ignore.rule.tree</field>
        <field name="model">ignore.rule</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="description" />
                <field name="model" />
                <field name="active" widget="boolean_toggle" />
            </tree>
        </field>
    </record>
    <record id="view_ignore_rule_form" model="ir.ui.view">
        <field name="name">ignore.rule.form</field>
        <field name="model">ignore.rule</field>
        <field name="arch" type="xml">
            <form string="Ignore Rule Setup" name="ignore_rule">
                <sheet>
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="active" invisible="1" />
                            <field name="description" />
                        </group>
                    </group>
                    <group>
                        <group colspan="4" groups="base.group_system">
                            <field name="model" />
                            <field name="exception_ids" widget="many2many_tags" />
                            <field name="exception_type" widget="radio" />
                            <field
                                name="domain"
                                attrs="{'invisible': [('exception_type','!=','by_domain')], 'required': [('exception_type','=','by_domain')]}"
                                widget="domain"
                                options="{'model': 'model'}"
                            />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_ignore_rule_tree" model="ir.actions.act_window">
        <field name="name">Ignore Rules</field>
        <field name="res_model">ignore.rule</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_ignore_rule_tree" />
        <field name="context">{'active_test': False}</field>
    </record>
    <menuitem
        action="action_ignore_rule_tree"
        id="menu_action_ignore_rule"
        parent="base.menu_custom"
        sequence="90"
        groups="base_exception.group_exception_rule_manager"
    />
</odoo>
